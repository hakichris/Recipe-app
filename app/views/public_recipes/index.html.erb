<div class='recipes_container'>
  <% @recipes.each do |recipe| %>
    <div class='recipe_container'>
      <div class="recipe_inform">
        <h3>Name: <%= recipe.name %></h3>
        <p>by: <%= User.find(recipe.user_id).name %></p>
        <p> Cooking time: <%= recipe.cooking_time %></p>
        <p> Preparation time: <%= recipe.preparation_time %></p>

        <ul>
          <% recipe.foods.each do |food| %>
            <% rf = RecipeFood.find_by(recipe_id: recipe.id, food_id: food.id) %>
            <li><%= food.name %> - Quantity: <%= rf.quantity %> - Price: $<%= food.price * rf.quantity %></li>
          <% end %>
        </ul>

      </div>
      <div class='btn'>
        <%= link_to "View Recipe", public_recipe_path(recipe) %>
      </div>
    </div>
  <% end %>
</div>
